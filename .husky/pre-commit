npx lint-staged

if [ $? -eq 0 ]; then
  echo "✅ Linting completado. Ejecutando build..."
  npm run build-only
  build_result=$?
  
  if [ $build_result -eq 0 ]; then
    echo "✅ Build completado correctamente"
    exit 0
  else
    echo "❌ Build falló"
    exit 1
  fi
else
  echo "❌ Linting falló"
  exit 1
fi
